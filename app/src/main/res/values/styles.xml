<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.BoomLotto" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/teal_a700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_a700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="DialogAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="drawer_menus">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/drawer_text_color</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">35dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="boom_seek_bar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#AAAAAA</item>
        <item name="android:progressTint">#FF6701</item>
        <item name="android:thumbTint">#FF6701</item>
    </style>

    <style name="MaterialToolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="date_picker_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">#6100E2</item>          <!--header background-->
        <item name="android:windowBackground">@color/white</item>     <!--calendar background-->
        <item name="android:colorControlActivated">#00D1A0</item> <!--selected day-->
        <item name="android:colorControlHighlight">@color/tab_text_unselected</item> <!--selected day-->
        <item name="android:textColorPrimary">#666666</item> <!--days of the month-->
        <item name="android:textColorSecondary">#333333</item>    <!--days of the week-->
        <item name="android:colorButtonNormal">#00D1A0</item>    <!--days of the week-->
        <item name="android:buttonBarNegativeButtonStyle">
            @style/DatePickerTheme.ButtonBarNegativeButtonStyle
        </item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FE0168</item>
    </style>

    <style name="DialogAnimationLeftToCenter">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_left_to_center</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_center_to_left</item>
    </style>

    <style name="DialogAnimationRightToCenter">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_left</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_right</item>
    </style>

    <style name="DialogAnimationZoomInOut">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="CustomCardCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cardBackgroundColor">#F5F7F8</item>
        <item name="backgroundColor">#F5F7F8</item>
        <item name="android:padding">0dp</item>
        <item name="elevation">7dp</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">#555555</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/sheet_background</item>
    </style>

    <style name="SheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="AppTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#ABADC5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">#e9edf2</item>
        <item name="android:textColorHint">#A7A8C2</item>
        <item name="hintTextColor">#A7A8C2</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="errorTextColor">@color/color_app_pink</item>
        <item name="boxStrokeErrorColor">@color/color_app_pink</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorPrimary">@color/color_app_green</item>
    </style>

</resources>