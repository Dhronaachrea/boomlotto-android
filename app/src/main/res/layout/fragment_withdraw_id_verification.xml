<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.skilrock.boomlotto.viewmodels.WithdrawIdVerificationViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fragment_background_color"
        android:orientation="vertical"
        tools:context=".ui.fragment.WithdrawIdVerificationFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Make sure all details are as per your ID proof.-->

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/fragment_background_color"
                android:gravity="start"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/make_sure_all_details_are_as_per_your_id_proof"
                    android:textAlignment="viewStart"
                    android:textColor="#9900004c"
                    android:textDirection="locale"
                    android:textSize="15sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="14dp"
                    android:text="@string/first_name"
                    android:textAlignment="viewStart"
                    android:textColor="@color/color_app_base_blue"
                    android:textDirection="locale"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.skilrock.boomlotto.utility.BoomTextInputLayout
                    android:id="@+id/tilFirstName"
                    style="@style/AppTextInputLayoutStyle"
                    android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="start|center_vertical"
                        android:hint="@string/enter_first_name"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:maxLength="40"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/color_app_base_blue"
                        android:textColorHint="#A7A8C2"
                        android:textDirection="locale"
                        android:textSize="16sp" />

                </com.skilrock.boomlotto.utility.BoomTextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/last_name"
                    android:textAlignment="viewStart"
                    android:textColor="@color/color_app_base_blue"
                    android:textDirection="locale"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.skilrock.boomlotto.utility.BoomTextInputLayout
                    android:id="@+id/tilLastName"
                    style="@style/AppTextInputLayoutStyle"
                    android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLastName"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="start|center_vertical"
                        android:hint="@string/enter_last_name"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:maxLength="40"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/color_app_base_blue"
                        android:textColorHint="#A7A8C2"
                        android:textDirection="locale"
                        android:textSize="16sp" />

                </com.skilrock.boomlotto.utility.BoomTextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/date_of_birth"
                    android:textAlignment="viewStart"
                    android:textColor="@color/color_app_base_blue"
                    android:textDirection="locale"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.skilrock.boomlotto.utility.BoomTextInputLayout
                    android:id="@+id/tilDob"
                    style="@style/AppTextInputLayoutStyle"
                    android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eTDob"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:clickable="false"
                        android:drawableEnd="@drawable/ic_calendar_light"
                        android:focusable="false"
                        android:gravity="start|center_vertical"
                        android:hint="@string/select_your_dob"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:maxLength="40"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/color_app_base_blue"
                        android:textColorHint="#A7A8C2"
                        android:textDirection="locale"
                        android:textSize="16sp" />

                </com.skilrock.boomlotto.utility.BoomTextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/gender"
                    android:textAlignment="viewStart"
                    android:textColor="@color/color_app_base_blue"
                    android:textDirection="locale"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:orientation="horizontal">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:buttonTint="@color/color_app_purple"
                        android:checked="true"
                        android:gravity="center"
                        android:text="@string/male"
                        android:textColor="@color/color_app_base_blue"
                        android:textDirection="locale"
                        android:textSize="15sp" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/color_app_purple"
                        android:gravity="center"
                        android:text="@string/female"
                        android:textColor="@color/color_app_base_blue"
                        android:textDirection="locale"
                        android:textSize="15sp" />

                </RadioGroup>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/nationality"
                    android:textAlignment="viewStart"
                    android:textColor="@color/color_app_base_blue"
                    android:textDirection="locale"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.skilrock.boomlotto.utility.BoomTextInputLayout
                    android:id="@+id/tilNationality"
                    style="@style/AppTextInputLayoutStyle"
                    android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eTNationality"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:clickable="false"
                        android:drawableEnd="@drawable/down_arrow_light"
                        android:focusable="false"
                        android:gravity="start|center_vertical"
                        android:hint="@string/select_your_nationality"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:maxLength="40"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/color_app_base_blue"
                        android:textColorHint="#A7A8C2"
                        android:textDirection="locale"
                        android:textSize="16sp" />

                </com.skilrock.boomlotto.utility.BoomTextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/id_proof"
                    android:textAlignment="viewStart"
                    android:textColor="@color/color_app_base_blue"
                    android:textDirection="locale"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvPassportId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/id_number_selected"
                        android:gravity="center"
                        android:padding="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp"
                        android:text="@string/passport_id"
                        android:textColor="@color/color_app_pink"
                        android:textDirection="locale"
                        android:textSize="15sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvEmiratesId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/id_number_unselected"
                        android:gravity="center"
                        android:padding="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp"
                        android:text="@string/emirates_id"
                        android:textColor="@color/color_app_base_blue"
                        android:textDirection="locale"
                        android:textSize="15sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.skilrock.boomlotto.utility.BoomTextInputLayout
                    android:id="@+id/tilId"
                    style="@style/AppTextInputLayoutStyle"
                    android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eTId"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="start|center_vertical"
                        android:hint="@string/enter_passport_id_number"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:maxLength="40"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/color_app_base_blue"
                        android:textColorHint="#A7A8C2"
                        android:textDirection="locale"
                        android:textSize="16sp" />

                </com.skilrock.boomlotto.utility.BoomTextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvIdExpiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/expiry_date_of_passport"
                    android:textAlignment="viewStart"
                    android:textColor="@color/color_app_base_blue"
                    android:textDirection="locale"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.skilrock.boomlotto.utility.BoomTextInputLayout
                    android:id="@+id/tilIdExpiry"
                    style="@style/AppTextInputLayoutStyle"
                    android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etIdExpiry"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:clickable="false"
                        android:drawableEnd="@drawable/ic_calendar_light"
                        android:focusable="false"
                        android:gravity="start|center_vertical"
                        android:hint="@string/select_expiry_date"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:maxLength="40"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/color_app_base_blue"
                        android:textColorHint="#A7A8C2"
                        android:textDirection="locale"
                        android:textSize="16sp" />

                </com.skilrock.boomlotto.utility.BoomTextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/proof_of_id"
                    android:textAlignment="viewStart"
                    android:textColor="@color/color_app_base_blue"
                    android:textDirection="locale"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/upload_your_id_as_a_proof_here_remember_we_will_check_your_details_for_approving_your_identification"
                    android:textAlignment="viewStart"
                    android:textColor="#7D7DA4"
                    android:textDirection="locale" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSelectAttachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="#F4EBFD"
                    app:cardCornerRadius="20dp"
                    app:strokeColor="@color/color_app_purple"
                    app:strokeWidth="1dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="25dp"
                        android:paddingTop="@dimen/activity_padding"
                        android:paddingEnd="25dp"
                        android:paddingBottom="@dimen/activity_padding">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/icon_attachment"
                            android:drawablePadding="3dp"
                            android:text="@string/add_attachment"
                            android:textAlignment="viewStart"
                            android:textColor="@color/color_app_purple"
                            android:textDirection="locale"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:text="@string/max_file_size_should_be_2mb_each_and_supported_format_is_jpg_jpeg_png_pdf"
                            android:textColor="#7D7DA4"
                            android:textDirection="locale"
                            android:textSize="15sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/attachment_limit_5"
                            android:gravity="end"
                            android:layout_marginTop="5dp"
                            android:textColor="#7D7DA4"
                            android:textDirection="locale"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAttachedItem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="@color/fragment_background_color"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:visibility="gone"
                    app:strokeColor="#bcd6ec"
                    app:strokeWidth="1dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/activity_padding"
                        android:paddingTop="10dp"
                        android:paddingEnd="@dimen/activity_padding"
                        android:paddingBottom="10dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvAttachmentForItem1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_attachment"
                            android:textAlignment="viewStart"
                            android:textColor="@color/color_app_base_blue"
                            android:textDirection="locale"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivDeleteAttachmentForItem1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:padding="5dp"
                            android:src="@drawable/ic_icon_trash_bin" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAttachedItem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="@color/fragment_background_color"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:visibility="gone"
                    app:strokeColor="#bcd6ec"
                    app:strokeWidth="1dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/activity_padding"
                        android:paddingTop="10dp"
                        android:paddingEnd="@dimen/activity_padding"
                        android:paddingBottom="10dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvAttachmentForItem2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_attachment"
                            android:textAlignment="viewStart"
                            android:textColor="@color/color_app_base_blue"
                            android:textDirection="locale"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivDeleteAttachmentForItem2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:padding="5dp"
                            android:src="@drawable/ic_icon_trash_bin" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAttachedItem3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="@color/fragment_background_color"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:visibility="gone"
                    app:strokeColor="#bcd6ec"
                    app:strokeWidth="1dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/activity_padding"
                        android:paddingTop="10dp"
                        android:paddingEnd="@dimen/activity_padding"
                        android:paddingBottom="10dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvAttachmentForItem3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_attachment"
                            android:textAlignment="viewStart"
                            android:textColor="@color/color_app_base_blue"
                            android:textDirection="locale"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivDeleteAttachmentForItem3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:padding="5dp"
                            android:src="@drawable/ic_icon_trash_bin" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAttachedItem4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="@color/fragment_background_color"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:visibility="gone"
                    app:strokeColor="#bcd6ec"
                    app:strokeWidth="1dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/activity_padding"
                        android:paddingTop="10dp"
                        android:paddingEnd="@dimen/activity_padding"
                        android:paddingBottom="10dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvAttachmentForItem4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_attachment"
                            android:textAlignment="viewStart"
                            android:textColor="@color/color_app_base_blue"
                            android:textDirection="locale"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivDeleteAttachmentForItem4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:padding="5dp"
                            android:src="@drawable/ic_icon_trash_bin" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAttachedItem5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="@color/fragment_background_color"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:visibility="gone"
                    app:strokeColor="#bcd6ec"
                    app:strokeWidth="1dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/activity_padding"
                        android:paddingTop="10dp"
                        android:paddingEnd="@dimen/activity_padding"
                        android:paddingBottom="10dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvAttachmentForItem5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_attachment"
                            android:textAlignment="viewStart"
                            android:textColor="@color/color_app_base_blue"
                            android:textDirection="locale"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
