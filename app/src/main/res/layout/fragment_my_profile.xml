<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/fragment_background_color"
        tools:context=".ui.fragment.MyProfileFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fragment_background_color">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/activity_padding">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contact_details"
                            android:layout_gravity="center"
                            android:textDirection="locale"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_app_base_blue" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/cvVerified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/verified_card"
                            android:visibility="gone">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp"
                                android:textDirection="locale"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:text="@string/verified"
                                android:textColor="@color/dark_blue"/>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/cvPending"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/pending_card"
                            android:visibility="gone">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="15dp"
                                android:textDirection="locale"
                                android:paddingEnd="15dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:text="@string/pending"
                                android:textColor="@color/dark_blue"/>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/cvEditEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_drawable">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:src="@drawable/ic_baseline_edit_24" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:textDirection="locale"
                                android:text="@string/mobile"
                                android:textSize="15sp"
                                android:textColor="#9900004c" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvMobileNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textDirection="locale"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/color_app_base_blue" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:textDirection="locale"
                                android:textSize="15sp"
                                android:text="@string/email_address"
                                android:textColor="#9900004c" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvEmailAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textDirection="locale"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/color_app_base_blue" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/icon_stroke_color" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/activity_padding">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/personal_details"
                            android:textDirection="locale"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_app_base_blue" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/cvVerifiedPersonalDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/verified_card"
                            android:visibility="gone">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="15dp"
                                android:textDirection="locale"
                                android:paddingEnd="15dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:text="@string/verified"
                                android:textColor="@color/dark_blue"/>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/cvPendingPersonalDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/pending_card"
                            android:visibility="gone">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="15dp"
                                android:textDirection="locale"
                                android:paddingEnd="15dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:text="@string/pending"
                                android:textColor="@color/dark_blue"/>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/cvEditProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_drawable">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:src="@drawable/ic_baseline_edit_24"/>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:textDirection="locale"
                                android:text="@string/name"
                                android:layout_gravity="start"
                                android:textSize="15sp"
                                android:textColor="#9900004c" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textDirection="locale"
                                android:textSize="15sp"
                                android:layout_gravity="start"
                                android:textStyle="bold"
                                android:textColor="@color/color_app_base_blue" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:textDirection="locale"
                                android:textSize="15sp"
                                android:text="@string/date_of_birth"
                                android:textColor="#9900004c" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvDateOfBirth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textDirection="locale"
                                android:textStyle="bold"
                                android:textColor="@color/color_app_base_blue" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:textDirection="locale"
                                android:text="@string/nationality"
                                android:textSize="15sp"
                                android:textColor="#9900004c" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvNationality"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_gravity="start"
                                android:textDirection="locale"
                                android:textStyle="bold"
                                android:textColor="@color/color_app_base_blue" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:textDirection="locale"
                                android:gravity="start"
                                android:textSize="15sp"
                                android:text="@string/proof_of_id"
                                android:textColor="#9900004c" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvProofOfId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_gravity="start"
                                android:textDirection="locale"
                                android:textStyle="bold"
                                android:textColor="@color/color_app_base_blue" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:textDirection="locale"
                                android:text="@string/id_number"
                                android:textSize="15sp"
                                android:textColor="#9900004c" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvIdNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_gravity="start"
                                android:textDirection="locale"
                                android:textStyle="bold"
                                android:textColor="@color/color_app_base_blue" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:textDirection="locale"
                                android:layout_gravity="start"
                                android:textSize="15sp"
                                android:text="@string/id_expiry"
                                android:textColor="#9900004c" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvIdExpiry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_gravity="start"
                                android:textDirection="locale"
                                android:textStyle="bold"
                                android:textColor="@color/color_app_base_blue" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/icon_stroke_color" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/activity_padding">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textDirection="locale"
                            android:text="@string/residential_address"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_app_base_blue" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/cvEditAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_drawable">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:src="@drawable/ic_baseline_edit_24" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:textDirection="locale"
                                android:text="@string/address"
                                android:layout_gravity="start"
                                android:textSize="15sp"
                                android:textColor="#9900004c" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textDirection="locale"
                                android:textSize="15sp"
                                android:layout_gravity="start"
                                android:textStyle="bold"
                                android:textColor="@color/color_app_base_blue" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:textDirection="locale"
                                android:layout_gravity="start"
                                android:textSize="15sp"
                                android:text="@string/city"
                                android:textColor="#9900004c" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvCity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textDirection="locale"
                                android:layout_gravity="start"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/color_app_base_blue" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:textDirection="locale"
                                android:layout_gravity="start"
                                android:text="@string/state"
                                android:textSize="15sp"
                                android:textColor="#9900004c" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvState"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_gravity="start"
                                android:textDirection="locale"
                                android:textStyle="bold"
                                android:textColor="@color/color_app_base_blue" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:textDirection="locale"
                                android:textSize="15sp"
                                android:layout_gravity="start"
                                android:text="@string/country"
                                android:textColor="#9900004c" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvCountry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_gravity="start"
                                android:textDirection="locale"
                                android:textStyle="bold"
                                android:textColor="@color/color_app_base_blue" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llProfileUpdateInfoCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        android:layout_margin="@dimen/activity_padding"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/icon_stroke_color">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textDirection="locale"
                            android:padding="20dp"
                            android:gravity="center"
                            android:text="@string/your_profile_has_been_updated_and_is_pending_for_approval" />

                    </com.google.android.material.card.MaterialCardView>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textDirection="locale"
                        android:text="@string/profile_update_on"
                        android:textSize="14sp"
                        android:textColor="#9900004c"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvProfileUpdatedOn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textDirection="locale"
                        android:textSize="13sp"
                        android:textColor="@color/color_app_base_blue"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>